<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="50dp"
        android:left="-250dp"
        android:right="-250dp"
        android:top="-50dp">
        <shape android:shape="oval">

            <gradient
                android:angle="45"
                android:centerColor="#B6D7E6"
                android:endColor="#0ECCE4"
                android:startColor="#0673CA"
                android:type="linear" />
        </shape>
    </item>

</layer-list>